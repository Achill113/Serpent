<div class="body">
	<div class="article">
		<h1><%= @article.title %></h1>

		<div class="article_box">
		<p>
			<%= @article.text %>
		</p>
		</div>
		<button><%= link_to 'Back', main_index_path %></button>
		<button><%= link_to 'Edit', edit_main_path %></button>
		<button><%= link_to 'Delete Post', main_path,
					method: :delete,
					data: { confirm: 'Are you sure you want to delete this post?' } %>
	</div>
	<div>
	<%= commontator_thread(commontable) %>
	</div>
	
	<div>
		<h2>Add a comment:</h2>
		<%= form_for :comment do |f| %>
		  <p>
		    <%= f.label :commenter %><br>
		    <%= f.text_field :commenter %>
		  </p>
		  <p>
		    <%= f.label :body %><br>
		    <%= f.text_area :body %>
		  </p>
		  <p>
		    <%= f.submit %>
		  </p>
		<% end %>
	</div>

</div>